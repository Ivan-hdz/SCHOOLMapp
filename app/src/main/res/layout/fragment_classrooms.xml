<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="mx.android.schoolapps.schoolmapp.Fragments.ClassroomsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Edificios"
            android:textColor="@color/colorAccent"

            android:textSize="24sp"
            android:textStyle="bold"
            tools:textColor="@color/colorAccent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Salones"
            android:textColor="@color/colorAccent"

            android:textSize="24sp"
            android:textStyle="bold"
            tools:textColor="@color/colorAccent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imageViewClassroomsBuildingsIcon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".85"
            app:srcCompat="@drawable/building" />

        <ImageView
            android:id="@+id/imageViewClassroomsClassroomsIcon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".85"
            app:srcCompat="@drawable/teach" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Grupos"
            android:textColor="@color/colorAccent"

            android:textSize="24sp"
            android:textStyle="bold"
            tools:textColor="@color/colorAccent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Salones Libres"
            android:textColor="@color/colorAccent"

            android:textSize="24sp"
            android:textStyle="bold"
            tools:textColor="@color/colorAccent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imageViewClassroomsGroupsIcon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".85"

            app:srcCompat="@drawable/group" />

        <ImageView
            android:id="@+id/imageViewClassroomsEmptyClassroomsIcon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".85"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            app:srcCompat="@drawable/available" /> <!--icon1-->
    </LinearLayout>

</LinearLayout>
