<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="200px"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageViewc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                 />
            <!--<ImageView
                android:id="@+id/imageViewc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                />-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="100pt"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleX=".8"
                android:scaleY=".8"
                app:srcCompat="@drawable/username" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleX=".8"
                android:scaleY=".8"
                app:srcCompat="@drawable/briefcase" />


            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleX=".8"
                android:scaleY=".8"
                app:srcCompat="@drawable/mail" />

            <View
                android:id="@+id/dividerb"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="?android:attr/listDivider"
                tools:background="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_nombrec"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:autoSizeMaxTextSize="14sp"
                android:baselineAligned="false"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview_descripcionc"
                android:layout_width="wrap_content"
                android:layout_height="0dp"

                android:layout_weight="1"
                android:baselineAligned="false"
                android:textColor="@color/colorAccent"
                android:textSize="13sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/buttonContactoc"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"

                android:baselineAligned="false"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"

                android:textColor="@color/cardview_light_background"
                android:textColorLink="@color/cardview_light_background"
                android:textSize="11sp" />

            <View
                android:id="@+id/divider2b"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="?android:attr/listDivider"
                tools:background="#000000" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>