    <TextView
        android:id="@+id/textViewDetailNombreAcademia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        android:textColor="@android:color/black"/>

</LinearLayout>
