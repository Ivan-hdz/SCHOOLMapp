<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.BuildingsActivity">

    <!--suppress AndroidDomInspection, AndroidDomInspection -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarBuildingsActivity"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_scrollFlags="scroll|enterAlways|snap"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_below="@id/toolbarBuildingsActivity"
        android:orientation="vertical">

        <!--suppress AndroidDomInspection -->
        <TextView
            android:id="@+id/textViewFirstFloor"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:background="?attr/colorPrimary"
            android:text="Primer\nEdificio"
            android:textColor="@android:color/white"                android:textStyle="bold"
            android:textSize="50sp"
            android:gravity="center"/>

        <!--suppress AndroidDomInspection -->
        <TextView
            android:id="@+id/textViewSecondFloor"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:background="?attr/colorPrimary"
            android:text="Edificio\nCentral"
            android:textStyle="bold"
            android:textSize="50sp"
            android:textColor="@android:color/white"
            android:gravity="center"/>

        <!--suppress AndroidDomInspection -->
        <TextView
            android:id="@+id/textViewThirdFloor"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:background="?attr/colorPrimary"
            android:text="Segundo\nEdificio"
            android:textStyle="bold"
            android:textSize="50sp"
            android:textColor="@android:color/white"
            android:gravity="center"/>

    </LinearLayout>

</RelativeLayout>